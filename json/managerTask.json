{
    "title": "Task",
    "type": "object",
    "properties": {
        "current": {
            "type": "object"
        },
        "global": {
            "type": "object"
        },
        "taskSet": {
            "$ref": "#/definitions/taskSet"
        },
        "sequence": {
            "$ref": "#/definitions/taskSequence"
        }
    },
    "definitions": {
        "taskElement": {
            "title": "Task",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the task, used for recording information.",
                    "required": true
                },
                "title": {
                    "type": "string",
                    "description": "A string to be used as the page title (the name displayed on the tag). It is reset at the end of the task."
                },
                "inherit": {
                    "title": "Inherit",
                    "type": "object",
                    "format": "grid",
                    "properties": {
                        "set": {
                            "type": "string",
                            "description": "Which set are we inheriting from."
                        },
                        "type": {
                            "enum": {
                                "0": "random",
                                "1": "exRandom",
                                "2": "sequential",
                                "3": "byData"
                            },
                            "description": "The inheritance method."
                        },
                        "seed": {
                            "type": "string"
                        },
                        "repeat": {
                            "type": "boolean"
                        }
                    },
                    "defaultProperties": {
                        "0": "set",
                        "1": "type"
                    }
                },
                "data": {
                    "type": "object",
                    "options": {
                        "no_additional_properties": false
                    },
                    "description": "Sets up some local variables."
                },
                "merge": {
                    "type": "array",
                    "uniqueItems": true,
                    "format": "table",
                    "items": {
                        "type": "string"
                    },
                    "description": "Attributes inheritance extends instead of overriding."
                },
                "regenerateTemplate": {
                    "type": "boolean",
                    "description": "Regenerate templates each time they are encountered."
                }
            },
            "oneOf": {
                "0": {
                    "title": "PIP",
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": {
                                "0": "pip"
                            },
                            "options": {
                                "hidden": true
                            }
                        },
                        "script": {
                            "type": "string",
                            "description": "The actual script object for the quest or pip tasks."
                        },
                        "scriptUrl": {
                            "type": "string",
                            "description": "The url for the quest or pip script."
                        }
                    },
                    "defaultProperties": {
                        "0": "type",
                        "1": "name",
                        "2": "scriptUrl"
                    }
                },
                "1": {
                    "title": "Message",
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": {
                                "0": "message"
                            },
                            "options": {
                                "hidden": true
                            }
                        },
                        "template": {
                            "type": "string",
                            "description": "The actual html to display as a string."
                        },
                        "templateUrl": {
                            "type": "string",
                            "description": "The url for the message html file."
                        },
                        "keys": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Controls the proceed key: either a key (i.e. 'a') a keyCode (i.e. 65)."
                        }
                    },
                    "defaultProperties": {
                        "0": "type",
                        "1": "name",
                        "2": "templateUrl"
                    }
                }
            },
            "additionalProperties": false
        },
        "taskSet": {
            "title": "Task set",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "set": {
                        "type": "sting",
                        "description": "Set name"
                    },
                    "elements": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/taskElement"
                        }
                    }
                }
            }
        },
        "taskSequence": {
            "id": "sequence",
            "title": "Sequence",
            "type": "array",
            "required": true,
            "items": {
                "type": "object",
                "oneOf": {
                    "0": {
                        "$ref": "#/definitions/taskMixer"
                    },
                    "1": {
                        "$ref": "#/definitions/taskelement"
                    }
                }
            }
        },
        "taskMixer": {
            "title": "mixer",
            "oneOf": {
                "0": {
                    "title": "Random",
                    "type": "object",
                    "description": "Randomize the order of elements within the sub-sequence.",
                    "additionalProperties": false,
                    "properties": {
                        "mixer": {
                            "type": "string",
                            "enum": {
                                "0": "random"
                            },
                            "required": true,
                            "options": {
                                "hidden": true
                            }
                        },
                        "data": {
                            "$ref": "#/definitions/taskSequence"
                        }
                    }
                },
                "1": {
                    "title": "Repeat",
                    "type": "object",
                    "description": "Repeat the sub-sequence \"times\" times.",
                    "additionalProperties": false,
                    "properties": {
                        "mixer": {
                            "type": "string",
                            "enum": {
                                "0": "repeat"
                            },
                            "required": true,
                            "options": {
                                "hidden": true
                            }
                        },
                        "times": {
                            "type": "integer"
                        },
                        "data": {
                            "$ref": "#/definitions/taskSequence"
                        }
                    }
                },
                "2": {
                    "title": "Weighted random",
                    "type": "object",
                    "description": "Randomly pick an element out of the sub-sequence, according to the set weights.",
                    "additionalProperties": false,
                    "properties": {
                        "mixer": {
                            "type": "string",
                            "enum": {
                                "0": "weightedRandom"
                            },
                            "required": true,
                            "options": {
                                "hidden": true
                            }
                        },
                        "weights": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            },
                            "format": "table"
                        },
                        "data": {
                            "$ref": "#/definitions/taskSequence"
                        }
                    }
                },
                "3": {
                    "title": "Choose",
                    "type": "object",
                    "description": "Randomly choose n elements out of the sub-sequence.",
                    "additionalProperties": false,
                    "properties": {
                        "mixer": {
                            "type": "string",
                            "enum": {
                                "0": "choose"
                            },
                            "required": true,
                            "options": {
                                "hidden": true
                            }
                        },
                        "n": {
                            "type": "number",
                            "default": 1
                        },
                        "data": {
                            "$ref": "#/definitions/taskSequence"
                        }
                    }
                },
                "4": {
                    "title": "Wrapper",
                    "type": "object",
                    "description": "A sort of parenthesis; delays evaluation of the sub-sequence until it is reached.",
                    "additionalProperties": false,
                    "properties": {
                        "mixer": {
                            "type": "string",
                            "enum": {
                                "0": "wrapper"
                            },
                            "required": true,
                            "options": {
                                "hidden": true
                            }
                        },
                        "data": {
                            "$ref": "#/definitions/taskSequence"
                        }
                    }
                }
            }
        }
    }
}
